{
    "name": "Slickiss",
    "version": "2.4.0",
    "manifest_version": 2,
    "description": "Hides ads and Captcha in Kissanime and offers many other functionalities like notifications for Anime, quick download, and more",
    "browser_action": {
        "default_name": "Slickiss",
        "default_popup": "popup.html",
        "default_icon": "icons/128.png"
    },
    "icons": {
        "128": "icons/128.png"
    },
    "permissions": [
        "*://kissanime.ru/*",
        "*://playhydrax.com/*",
        "*://hydrax.net/*",
        "*://ping.idocdn.com/",
        "*://www.mp4upload.com/*",
        "*://www.novelplanet.me/*",
        "cookies",
        "storage",
        "activeTab",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "*://ads.2mdnsys.com/*",
        "*://koindut.com/*",
        "*://arejoysew.com/*",
        "*://kissanime.ru/ads/*",
        "*://kissanime.ru/AGBXSKCSYWBSDAPOLA",
        "*://kissanime.ru/Scripts/video-js/video.js",
        "*://kissanime.ru/Scripts/video-js/video5.min.js"
    ],
    "background": {
        "scripts": [
            "jquery-2.1.4.min.js",
            "md5.js",
            "src/Chrome.js",
            "kickout.js",
            "background.js"
        ],
        "persistent": true
    },
    "web_accessible_resources": [
        "imgs/*",
        "webfonts/*",
        "*.html",
        "*.css"
    ],
    "content_scripts": [
        {
            "js": [
                "jquery-2.1.4.min.js",
                "ocrad.min.js",
                "md5.js",
                "src/custom.js",
                "src/Tooltip.js",
                "src/LocalStorage.js",
                "src/Prompt.js",
                "src/Assets.js",
                "src/ImgProc.js",
                "src/Chrome.js",
                "src/Notifier.js",
                "src/Captcha.js",
                "src/DlGrabber.js",
                "src/EpisodeListing.js",
                "src/Thumbnail.js",
                "src/Player.js",
                "src/Slickiss.js",
                "src/Bookmark.js",
                "src/Anime.js",
                "src/Episode.js",
                "src/MessageManager.js"
            ],
            "css": [
                "custom-style.css",
                "fontawesome.min.css"
            ],
            "matches": [
                "*://kissanime.ru/*",
                "*://playhydrax.com/*",
                "*://hydrax.net/*",
                "*://www.mp4upload.com/*",
                "*://www.novelplanet.me/*"
            ],
            "include_globs": [
                "*://kissanime.ru/*",
                "*://kissanime.ru/#batch",
                "*://playhydrax.com/*",
                "*://hydrax.net/watch?v=*",
                "*://www.mp4upload.com/embed-*",
                "*://www.novelplanet.me/v/*"
            ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": [
                "sendUpdates.js"
            ],
            "matches": [
                "*://kissanime.ru/"
            ],
            "include_globs": [
                "*://kissanime.ru/#sendUpdates"
            ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": [
                "src/BatchManager.js"
            ],
            "matches": [
                "*://kissanime.ru/"
            ],
            "include_globs": [
                "*://kissanime.ru/#batch"
            ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": [
                "src/CaptchaDisplay.js"
            ],
            "matches": [
                "*://kissanime.ru/Special/*"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}